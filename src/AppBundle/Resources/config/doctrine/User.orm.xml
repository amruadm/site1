<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\User" table="users">
    <id name="id" type="bigint" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="users_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="login" type="string" column="login" length="16" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="pass" type="string" column="pass" length="64" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="regDate" type="datetime" column="reg_date" nullable="false">
      <options>
        <option name="default">now()</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
