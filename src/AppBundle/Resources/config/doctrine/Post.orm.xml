<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Post" table="post">
    <indexes>
      <index name="fki_Ñ„" columns="added_by"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="post_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="title" type="string" column="title" length="128" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">Empty</option>
      </options>
    </field>
    <field name="addedDate" type="datetime" column="added_date" nullable="false">
      <options>
        <option name="comment">creating date</option>
        <option name="default">now()</option>
      </options>
    </field>
    <field name="body" type="text" column="body" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="addedBy" target-entity="Users" fetch="LAZY">
      <join-columns>
        <join-column name="added_by" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
