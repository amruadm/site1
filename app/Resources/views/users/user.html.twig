{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel primary-panel body-panel">
        <h1 align="center" class="body-header">Профиль</h1>
        <table class="table">
            <tr>
                <td>
                    <div class="skin-image" style="background-image: url('{{ asset(skin) }}');"></div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td>Пользователь</td>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <td>E-Mail</td>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <td>Дата реистрации</td>
                <td>{{ user.regdate | date('d.m.Y H:i') }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
                <tr>
                    <td>Роль</td>
                    <td>{{ user.role }}</td>
                </tr>
                <tr>
                    <td>uuid</td>
                    <td>{{ user.uuid }}</td>
                </tr>
            {% endif %}
        </table>

        {% if not is_granted('ROLE_ACTIVE') %}
            <span style="color: red">Ваш аккаунт не подтверждён</span> <a href="">(Не пришло сообщение)</a>
        {% endif %}
    </div>

{% endblock %}