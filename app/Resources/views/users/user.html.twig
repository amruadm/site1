{% extends 'base.html.twig' %}

{% block body_header %}
    Профиль
{% endblock %}

{% block body %}
    <table class="table">
        <tr>
            <td><img src="{{ asset('img/uploads/ava/' ~ user.image) }}" width="200px" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Пользователь</td>
            <td>{{ user.login }}</td>
        </tr>
        <tr>
            <td>Дата реистрации</td>
            <td>{{ user.regdate | date('Y-m-d H:i') }}</td>
        </tr>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <td>Роль</td>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <td>uuid</td>
                <td>{{ user.uuid }}</td>
            </tr>
        {% endif %}
    </table>

{% endblock %}