{% extends 'base.html.twig' %}

{% block body_header %}
    Список юзеров
{% endblock %}

{% block body %}
    <div class="panel primary-panel body-panel">
        <hr />
        <table align="center" class="table-striped" style="font-size: 14pt;">
            <tr>
                <th width="15%">ID</th>
                <th width="35%;">Логин</th>
                <th>E-Mail</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td><a href="{{ url('userpage', {'login': user.login}) }}" target="_blank">{{ user.login }}</a></td>
                    <td>{{ user.email }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}