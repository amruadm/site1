{% extends 'base.html.twig' %}

{% block body_header %}

{% endblock %}

{% block body %}
	<div ng-controller="postController">
		<div class="panel panel-default news-panel" style="border: 0px;" ng-repeat="post in posts">
			<div class="panel-heading">
				<b><span class="post-title">{[{ post.title }]}</span></b>
			</div>
			<div class="panel-body" style="padding: 0px;">
				<img src="{[{ '/img/uploads/' + post.image }]}" class="post-image" />
				<p>
					{[{ post.body }]}
				</p>
				<div class="col-sm-4"></div>
			</div>
			<div class="panel-footer" style="padding-right: 0px; padding-top: 0px;">
				<span class="panel-footer-addedby">
					<i class="fa fa-user-circle w3-large"></i> <b><a href="/user/{[{ post.added_by.id }]}">{[{ post.added_by.login }]}</a></b>
				</span>
				<div style="float: right; margin-right: 0px;">
					<div class="panel-footer-date">
						<i class="fa fa-calendar w3-large"></i>
						<span style="font-size: 12pt;">&nbsp;<b>{[{ post.added_date | date: 'dd.MM.yyyy' }]} в {[{ post.added_date | date: 'HH:mm' }]}</b></span>
					</div>
					<button class="btn download-btn" style="height: 49px;" ng-click="viewPost(post.id);">
						<b>Подробнее</b> <i class="fa fa-caret-square-o-right fa-1x"></i>
					</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script type="application/javascript">

	</script>
{% endblock %}