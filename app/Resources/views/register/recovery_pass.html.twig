{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel primary-panel body-panel">
        <h1 class="body-header">Восстановление пароля</h1>
        {% if success is not defined %}
            Укажите новый пароль
            {{ form_start(form) }}
            <div class="row row-form">
                <div class="col-sm-4">{{ form_label(form.newpass) }}</div>
                <div class="col-sm-4">{{ form_widget(form.newpass) }}</div>
                <div class="col-sm-5">
                    {% if error is defined %}
                        <span style="color: red;">{{ error }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="row row-form">
                <div class="col-sm-4">{{ form_label(form.newpass_confirm) }}</div>
                <div class="col-sm-4">{{ form_widget(form.newpass_confirm) }}</div>
            </div>
            <div class="row row-form">
                <div class="col-sm-2">{{ form_widget(form.submit) }}</div>
            </div>
            {{ form_end(form) }}
        {% else %}
            Ваша учётная запись успешно восстановлена. Нажмите &laquo;Вход&raquo; и введите ваш логин и новый пароль.
        {% endif %}
    </div>
{% endblock %}